<div class="container">
  <div class="servpagetitle"><h1><strong>Demandez votre devis</strong></h1></div>
  <br>

  <div class="contactform">
    <%= simple_form_for @quotation do |f| %>
      <div class="d-flex flex-row justify-content-between">
        <%= f.input :first_name, :label => "Votre prénom", :placeholder => "Marie", :required => true, :autofocus => true %>
        <%= f.input :last_name, :label => "Votre nom", :placeholder => "Dupond", :required => true, :autofocus => true %>
      </div>

      <div class="d-flex flex-row justify-content-between">
        <%= f.input :telefon, as: :tel, :label => "Votre téléphone", :placeholder => "0610101010", :autofocus => true %>
        <%= f.input :email, as: :email, :label => "Votre email", :placeholder => "mdupond@gmail.com", :required => true, :autofocus => true %>
      </div>

      <%= f.input :message, collection: ["Devis", "Devis: Comptabilité", "Devis: Suivi des ventes", "Devis: Gestion administrative"], :label => "Objet", :required => true, :autofocus => true %>
      <%= f.input :message, as: :text, :label => "Votre message", :placeholder => "Votre message", :required => true, :autofocus => true %>
    
      <div class="hidden">
        <%= f.input :nickname, :label => "Nickname", :hint => "Laisser ce champs vide" %>
      </div>

      <div class="d-flex flex-row justify-content-around">
        <%= f.button :submit, "Envoyer", class: "btn-light" %>
      </div>
    <% end %> 
  </div>

</div>
